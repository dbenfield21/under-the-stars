<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/public/stylesheets/style.css" />
<%- include('../partials/nav') %>



<main>
  <h1> Campsite </h1>
    <form id="new-form" action="/campsites/<%= campsite._id %>?_method=PUT" method="POST">

    <label for="title-input">Name:</label>
    <input type="text" name="name" id="name-input" value="<%= campsite.name %>">

    <label for="location-input">Location:</label>
    <input type="text" name="location" id="location-input" value="<%= campsite.location %>">

    <label for="campsite-rating-select">Campsite Rating</label>
    <select name="rating" id="campsite-rating-select" >
      <option value="<%= campsite.rating %>"><%= campsite.rating %></option>
      <option value=0>0</option>
      <option value=1>1</option>
      <option value=2>2</option> 
      <option value=3>3</option>
      <option value=4>4</option>
      <option value=5>5</option>
    </select>
    <button class="btn btn-primary" button type="submit">Update Campsite</button>
  </form>
</main>






<%- include('../partials/footer') %>